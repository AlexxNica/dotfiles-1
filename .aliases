# make aliases sudo-able
alias sudo="sudo "

# open/source this file
alias pr="subl ~/.profile"
alias spr="source ~/.profile; echo '~/.profile reloaded.'"

# directory navigation
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."

# some ls aliases
alias la="ls -A"
alias ll="ls -Al"

# File size
alias fs="stat -f '%z bytes'"

# git shortcuts
alias gs="git status"
alias ga="git add"
alias gc="git commit -m"

# npm shortcuts that only list top-level modules
# ! overrides the line-number utility
npm_filter="| grep ^[├└] | sed s/[├└]─[─┬]/─/g"
alias ng="npm list -g $npm_filter"
alias nl="npm list $npm_filter"

# Create a new directory and enter it
function md() {
  mkdir -p "$@" && cd "$@"
}

# clean the current directory
function clean() {
	read -p "remove everything here? (y/N)" yn
	if [ $yn = "y" ]; then
		rm -rf ./* ./.*
	fi
}

# for finding processes
function pg() {
	ps ax | grep [${1:0:1}]${1:1}
}